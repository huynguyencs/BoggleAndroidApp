<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.mymac.boggle">

    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />

    <permission
        android:name="android.permission.BLUETOOTH"
        android:label="BLUETOOTH" />
    <permission android:name="android.permission.BLUETOOTH_ADMIN" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".HomeScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".GameDifficulty" />
        <activity android:name=".MainBoard" />
        <activity android:name=".MultiplayerMode" />
        <activity android:name=".MultiplayerBoard" />
        <activity android:name=".Instruction" />
        <activity android:name=".Leaderboard" />
        <activity android:name=".Results" />
        <activity android:name=".BluetoothDeviceList" />
        <activity android:name=".ShakeActivity"></activity>
    </application>

</manifest>