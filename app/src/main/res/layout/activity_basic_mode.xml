<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_basic_mode"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@mipmap/pic7"
    tools:context="com.example.mymac.boggle.MultiplayerBoard">

    <Button
        android:layout_alignTop="@+id/button1"
        android:layout_toRightOf="@+id/button1"
        android:layout_toEndOf="@+id/button1"
        android:id="@+id/button2"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:backgroundTint="@color/star_yellow"
        android:textStyle="bold"
        android:textSize="20sp"/>

    <Button
        android:layout_toRightOf="@+id/button2"
        android:layout_toEndOf="@+id/button2"
        android:id="@+id/button3"
        android:layout_alignBottom="@+id/button2"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:backgroundTint="@color/star_yellow"
        android:textStyle="bold"
        android:textSize="20sp"/>

    <Button
        android:layout_width="70dp"
        android:layout_alignTop="@+id/button3"
        android:layout_toRightOf="@+id/button3"
        android:layout_toEndOf="@+id/button3"
        android:id="@+id/button4"
        android:layout_height="70dp"
        android:backgroundTint="@color/star_yellow"
        android:textStyle="bold"
        android:textSize="20sp"/>

    <Button
        android:id="@+id/button5"
        android:layout_below="@+id/button1"
        android:layout_alignLeft="@+id/button1"
        android:layout_alignStart="@+id/button1"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:backgroundTint="@color/star_yellow"
        android:textStyle="bold"
        android:textSize="20sp"/>

    <Button
        android:layout_below="@+id/button2"
        android:layout_toRightOf="@+id/button5"
        android:layout_toEndOf="@+id/button5"
        android:id="@+id/button6"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:backgroundTint="@color/star_yellow"
        android:textStyle="bold"
        android:textSize="20sp"/>

    <Button
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_below="@+id/button2"
        android:layout_toRightOf="@+id/button6"
        android:layout_toEndOf="@+id/button6"
        android:id="@+id/button7"
        android:backgroundTint="@color/star_yellow"
        android:textStyle="bold"
        android:textSize="20sp"/>

    <Button
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_below="@+id/button4"
        android:layout_toRightOf="@+id/button7"
        android:layout_toEndOf="@+id/button7"
        android:id="@+id/button8"
        android:backgroundTint="@color/star_yellow"
        android:textStyle="bold"
        android:textSize="20sp"/>

    <Button
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_below="@+id/button5"
        android:layout_alignLeft="@+id/button5"
        android:layout_alignStart="@+id/button5"
        android:id="@+id/button9"
        android:backgroundTint="@color/star_yellow"
        android:textStyle="bold"
        android:textSize="20sp"/>

    <Button
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_below="@+id/button5"
        android:layout_toRightOf="@+id/button9"
        android:layout_toEndOf="@+id/button9"
        android:id="@+id/button10"
        android:backgroundTint="@color/star_yellow"
        android:textStyle="bold"
        android:textSize="20sp"/>

    <Button
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_below="@+id/button6"
        android:layout_toRightOf="@+id/button10"
        android:layout_toEndOf="@+id/button10"
        android:id="@+id/button11"
        android:backgroundTint="@color/star_yellow"
        android:textStyle="bold"
        android:textSize="20sp"/>

    <Button
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_below="@+id/button7"
        android:layout_toRightOf="@+id/button7"
        android:layout_toEndOf="@+id/button7"
        android:id="@+id/button12"
        android:backgroundTint="@color/star_yellow"
        android:textStyle="bold"
        android:textSize="20sp"/>

    <Button
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_below="@+id/button9"
        android:layout_alignLeft="@+id/button9"
        android:layout_alignStart="@+id/button9"
        android:id="@+id/button13"
        android:backgroundTint="@color/star_yellow"
        android:textStyle="bold"
        android:textSize="20sp"/>

    <Button
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_below="@+id/button9"
        android:layout_toRightOf="@+id/button13"
        android:layout_toEndOf="@+id/button13"
        android:id="@+id/button14"
        android:backgroundTint="@color/star_yellow"
        android:textStyle="bold"
        android:textSize="20sp"/>

    <Button
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_below="@+id/button11"
        android:layout_toRightOf="@+id/button14"
        android:layout_toEndOf="@+id/button14"
        android:id="@+id/button15"
        android:backgroundTint="@color/star_yellow"
        android:textStyle="bold"
        android:textSize="20sp"/>

    <Button
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_below="@+id/button11"
        android:layout_toRightOf="@+id/button11"
        android:layout_toEndOf="@+id/button11"
        android:id="@+id/button16"
        android:backgroundTint="@color/star_yellow"
        android:textStyle="bold"
        android:textSize="20sp"/>


    <TextView
        android:text="Your Timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:id="@+id/p1_timer"
        android:layout_alignParentTop="true"
        android:textColor="@color/star_yellow"
        android:textStyle="bold"
        android:textSize="15sp"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:layout_alignLeft="@+id/button1"
        android:layout_alignStart="@+id/button1" />

    <TextView
        android:text="Timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:id="@+id/p2_timer"
        android:layout_alignParentTop="true"
        android:textColor="@color/star_yellow"
        android:textStyle="bold"
        android:textSize="15sp"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:layout_alignRight="@+id/button4"
        android:layout_alignEnd="@+id/button4" />

    <TextView
        android:text="Your Score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/p1_timer"
        android:layout_alignLeft="@+id/button1"
        android:layout_alignStart="@+id/button1"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:textSize="15sp"
        android:id="@+id/p1_score"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

    <TextView
        android:text="Score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/p2_timer"
        android:layout_alignRight="@+id/button4"
        android:layout_alignEnd="@+id/button4"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:textSize="15sp"
        android:id="@+id/p2_score"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium" />
    <Button
        android:text="Submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/submit"
        android:backgroundTint="@android:color/holo_orange_dark"
        android:width="85dp"
        android:height="55dp"
        android:textSize="14sp"
        android:textStyle="normal|bold"
        android:textColor="@android:color/white"
        android:layout_below="@+id/button13"
        android:layout_alignLeft="@+id/button13"
        android:layout_alignStart="@+id/button13"
        android:layout_marginTop="12dp" />

    <Button
        android:text="Cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/submit"
        android:layout_toRightOf="@+id/submit"
        android:layout_toEndOf="@+id/submit"
        android:id="@+id/cancel"
        android:backgroundTint="@android:color/holo_red_light"
        android:width="85dp"
        android:height="55dp"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="@android:color/white" />

    <Button
        android:text="Stop Timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/submit"
        android:layout_toRightOf="@+id/cancel"
        android:layout_toEndOf="@+id/cancel"
        android:id="@+id/stopTimer"
        android:backgroundTint="@android:color/holo_red_dark"
        android:width="105dp"
        android:height="55dp"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/button1"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:backgroundTint="@color/star_yellow"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/p2_score"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textStyle="bold"
        android:textSize="20sp"/>

    <TextView
        android:text="Found:"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:id="@+id/wordsFound"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:layout_below="@+id/submit"
        android:layout_marginTop="10dp"
        android:layout_alignRight="@+id/submit"
        android:layout_alignEnd="@+id/submit"
        />

    <TextView
        android:text="WordList"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:id="@+id/correctSubmission"
        android:textColor="@android:color/holo_green_light"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:layout_below="@+id/submit"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_alignLeft="@+id/button15"
        android:layout_alignStart="@+id/button15"
        android:scrollbars="vertical"
        android:maxLines="8" />


</RelativeLayout>
